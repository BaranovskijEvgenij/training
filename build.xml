<project name="training" default="war" basedir=".">
	<property file="training/build.properties"/>
        
 
               

<path id="classpath">
  <fileset dir="${lib.dir}" includes="servlet-api.jar"/>
</path>






  <target name="help">
    <echo>
      Help for the build script...
    </echo>
  </target>

  <target name="clean">
    	<delete dir="build.dir"/>

  </target>
  


  <target name="build" depends="clean">
        
	 <mkdir dir="build.dir/buildTT/911"/>




</target>	       
         
     <target name="complite" depends="build">
 <javac srcdir="." destdir="build.dir/buildTT/911">
         <classpath location="../lib/google-gson-1.4/gson-1.4.jar"/>
    </javac>                                                        
                               
  </target>

   
                                                                           

                   

<target name="war" depends="complite">
    <echo>Building the war file</echo>
    <war destfile="dist.dir/project.name.war" webxml="build.dir/buildTT/911">
        <fileset dir="build.dir"/>
    </war>
</target>





    	</project>